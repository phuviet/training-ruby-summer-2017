<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body style="text-align: center;">
	<h1>Books list</h1>
		<table border=1 style="margin: 0 auto;">
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Author</th>
				<th>Publish Date</th>
				<th>Lend people</th>
				<th>Function</th>
			</tr>
			<% @books.each do |book|%>
				<tr>
					<td><%=book['id_book'] %></td>
					<td><a href="books/<%=book['id_book'] %>"><%=book['name_book'] %></a></td>
					<td><%=book['author'] %></td>
					<td><%=book['publish_date'] %></td>
					<td><%=book['fname'] %></td>
					<td>
						<a href="books/<%=book['id_book'] %>/edit">Edit</a>
						<a href="books/<%=book['id_book'] %>/delete" onclick="confirm('Want you delete it?')">Delete</a>
					</td>
				</tr>
			<%end%>
		</table>
</body>
</html>